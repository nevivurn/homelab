apiVersion: v1
kind: Pod
metadata:
  name: dhcrelay4
spec:
  hostNetwork: true
  containers:
    - name: dhcrelay4
      securityContext:
        allowPrivilegeEscalation: false
        capabilities:
          drop: [ALL]
          add:
            - NET_BIND_SERVICE
            - NET_RAW
        readOnlyRootFilesystem: true
      image: "{{ dhcrelay_image }}:{{ dhcrelay_version }}"
      args:
        - -d
        - '-4'
        {%- for iface in dhcrelay_down +%}
        - -id
        - {{ iface }}
        {%- endfor +%}
        - -iu
        - {{ dhcrelay_up }}
        - {{ dhcrelay_v4 }}
